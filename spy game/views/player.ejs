<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spy Game - Player</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Spy Game</h1>
        <p id="message"><%= message %></p>
        <button id="hide-message">Hide Message</button>
        <div id="next-player-section" class="hidden">
            <% if (nextPlayer < totalPlayers) { %>
                <form action="/player/<%= nextPlayer %>" method="GET">
                    <button type="submit">Next Player</button>
                </form>
            <% } else { %>
                <form action="/" method="GET">
                    <button type="submit">Restart</button>
                </form>
            <% } %>
        </div>
    </div>
    <script>
        document.getElementById('hide-message').addEventListener('click', function() {
            document.getElementById('message').classList.add('hidden');
            document.getElementById('hide-message').classList.add('hidden');
            document.getElementById('next-player-section').classList.remove('hidden');
        });
    </script>
</body>
</html>
